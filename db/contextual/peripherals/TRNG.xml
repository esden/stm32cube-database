    <serie ref="Default">
        <peripheral>
            <!-- Title of the contextual widget -->
            <title>TRNG</title>
            <!-- Generic description displayed in the first panel of the tooltip -->
            <extract>True Random Number Generator</extract>
            <!-- Detailed information displayed in the expandable panel when no MCU series has been selected -->
            <help_text>a hardware random number generator (true random number generator, TRNG) is&lt;br/&gt;
                a device that generates random numbers from a physical process, rather than&lt;br/&gt;
                a computer program.
            </help_text>
