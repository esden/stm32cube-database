	<RefMode Name="RMII" HalMode="ETH">
		<ConfigForMode>Init</ConfigForMode>   
		<Parameter Name="Warning"/>
		<Parameter Name="Note"/>
		<Parameter Name="MACAddr"/>
		<Parameter Name="ETH_TX_DESC_CNT"/>
		<Parameter Name="TxDescAddress"/>
		<Parameter Name="TxDesc"/>
		<Parameter Name="ETH_RX_DESC_CNT"/>
		<Parameter Name="RxDescAddress"/>
		 <Parameter Name="RxDesc"/>
		<Parameter Name="RxBuffAddress"/>
        <Parameter Name="RxBuffLen"/>
		<Parameter Name="MediaInterface">
			<PossibleValue>HAL_ETH_RMII_MODE</PossibleValue>
		</Parameter>
		<Parameter Name="Instance"/>
	</RefMode>
	<!--
	<RefMode Name="RMII_PTP_Synchro" HalMode="ETH">
		<ConfigForMode>Init</ConfigForMode>   
		<Parameter Name="AutoNegotiation"/>
		<Parameter Name="Speed"/>
		<Parameter Name="DuplexMode"/> 
		<Parameter Name="MACAddr"/>
		<Parameter Name="RxMode"/>
		<Parameter Name="ChecksumMode"/> 
		<Parameter Name="PhyAddress"/>
		<Parameter Name="MediaInterface">
			<PossibleValue>ETH_MEDIA_INTERFACE_RMII</PossibleValue>
		</Parameter>
		<Parameter Name="Instance"/>
	</RefMode>
	-->
	<ModeLogicOperator Name="OR">
		<Mode Name="Mode">
			<ModeLogicOperator Name="XOR">
				<Mode Name="MII">				
					<SignalLogicalOp Name="AND">
						<Signal Name="COL"/>
						<Signal Name="CRS"/>
						<Signal Name="MDC"/>
						<Signal Name="MDIO"/>
						<Signal Name="RXD0"/>
						<Signal Name="RXD1"/>
						<Signal Name="RXD2"/>
						<Signal Name="RXD3"/>
						<Signal Name="RX_CLK"/>
						<Signal Name="RX_DV"/>		
						<Signal Name="TXD0"/>
						<Signal Name="TXD1"/>
						<Signal Name="TXD2"/>
						<Signal Name="TXD3"/>
						<Signal Name="TX_CLK"/>
						<Signal Name="TX_EN"/>
					</SignalLogicalOp>
					<Semaphore>MII</Semaphore>	
					<Semaphore>MW_ETH_MW</Semaphore>
				</Mode>
				<Mode Name="MII_PTP_Synchro">				
					<SignalLogicalOp Name="AND">
						<Signal Name="COL"/>
						<Signal Name="CRS"/>
						<Signal Name="MDC"/>
						<Signal Name="MDIO"/>
						<Signal Name="PPS_OUT"/>
						<Signal Name="RXD0"/>
						<Signal Name="RXD1"/>
						<Signal Name="RXD2"/>
						<Signal Name="RXD3"/>
						<Signal Name="RX_CLK"/>
						<Signal Name="RX_DV"/>
						<Signal Name="TXD0"/>
						<Signal Name="TXD1"/>
						<Signal Name="TXD2"/>
						<Signal Name="TXD3"/>
						<Signal Name="TX_CLK"/>
						<Signal Name="TX_EN"/>
					</SignalLogicalOp>
					<!--<Semaphore>MII_PTP_Synchro</Semaphore>-->
					<Semaphore>MII</Semaphore>	
					<Semaphore>MW_ETH_MW</Semaphore>
					<Condition Expression="((Semaphore_TriggerSourceITR4TIM2 &amp; Semaphore_ETH_ControllerModeTIM2) | (Semaphore_TriggerSourceITR4TIM3 &amp; Semaphore_ETH_ControllerModeTIM3)) | ((FDCAN_FLEXIBLE_DATARATE_FDCAN1 | FDCAN_FLEXIBLE_DATARATE_FDCAN2) | (FDCAN_Master_FDCAN1 | FDCAN_Slave_FDCAN2))" Diagnostic="Only active when TIM2/TIM3 has an enabled Slave Mode with ITR4 as trigger source or if FDCAN is enabled"/>

				</Mode>	
				<Mode Name="RMII">				
					<SignalLogicalOp Name="AND">
						<Signal Name="CRS_DV"/>
						<Signal Name="MDC"/>
						<Signal Name="MDIO"/>
						<Signal Name="REF_CLK"/>
						<Signal Name="RXD0"/>
						<Signal Name="RXD1"/>
						<Signal Name="TXD0"/>
						<Signal Name="TXD1"/>
						<Signal Name="TX_EN"/>
					</SignalLogicalOp>
					<!--<Semaphore>RMII</Semaphore>-->
					<Semaphore>MW_ETH_MW</Semaphore>
				</Mode>
				<Mode Name="RMII_PTP_Synchro">				
					<SignalLogicalOp Name="AND">
						<Signal Name="CRS_DV"/>
						<Signal Name="MDC"/>
						<Signal Name="MDIO"/>
						<Signal Name="PPS_OUT"/>
						<Signal Name="REF_CLK"/>
						<Signal Name="RXD0"/>
						<Signal Name="RXD1"/>
						<Signal Name="TXD0"/>
						<Signal Name="TXD1"/>
						<Signal Name="TX_EN"/>
					</SignalLogicalOp>
					<!--<Semaphore>RMII_PTP_Synchro</Semaphore>-->
					<Semaphore>MW_ETH_MW</Semaphore>
					<Condition Expression="((Semaphore_TriggerSourceITR4TIM2 &amp; Semaphore_ETH_ControllerModeTIM2) | (Semaphore_TriggerSourceITR4TIM3 &amp; Semaphore_ETH_ControllerModeTIM3)) | ((FDCAN_FLEXIBLE_DATARATE_FDCAN1 | FDCAN_FLEXIBLE_DATARATE_FDCAN2) | (FDCAN_Master_FDCAN1 | FDCAN_Slave_FDCAN2))" Diagnostic="Only active when TIM2/TIM3 has an enabled Slave Mode with ITR4 as trigger source or if FDCAN is enabled"/>
			
				</Mode>
				<Mode Name="GMII">				
					<SignalLogicalOp Name="AND">
						<Signal Name="CLK125"/>
						<Signal Name="COL"/>
						<Signal Name="CRS"/>
						<Signal Name="GTX_CLK"/>
						<Signal Name="RXD0"/>
						<Signal Name="RXD1"/>
						<Signal Name="RXD2"/>
						<Signal Name="RXD3"/>
						<Signal Name="RXD4"/>
						<Signal Name="RXD5"/>
						<Signal Name="RXD6"/>
						<Signal Name="RXD7"/>
						<Signal Name="RX_CLK"/>
						<Signal Name="RX_CTL"/>
						<Signal Name="RX_DV"/>
						<Signal Name="TXD0"/>
						<Signal Name="TXD1"/>
						<Signal Name="TXD2"/>
						<Signal Name="TXD3"/>
						<Signal Name="TXD4"/>
						<Signal Name="TXD5"/>
						<Signal Name="TXD6"/>
						<Signal Name="TXD7"/>
						<Signal Name="TX_CLK"/>
						<Signal Name="TX_CTL"/>
						<Signal Name="TX_EN"/>
						<Signal Name="TX_ER"/>
					</SignalLogicalOp>
					<!--<Semaphore>RMII</Semaphore>-->
					<Semaphore>MW_ETH_MW</Semaphore>
				</Mode>
			</ModeLogicOperator>
			<Semaphore>ETHUsed_ForRCC</Semaphore>
		</Mode>
		<Mode Name="Activate Rx Err signal">	
            <ModeLogicOperator Name="XOR">	
                <Mode Name="Activate Rx Err signal">			
					<SignalLogicalOp Name="AND">
						<Signal Name="RX_ER"/>
					</SignalLogicalOp>
				</Mode>
		    </ModeLogicOperator>
					<Condition Expression="MII" Diagnostic="Active only with an MII Mode"/>		
	    </Mode>
	</ModeLogicOperator>
	<RefSignal IOMode="AlternateFunctionPushPull" Name="COL"/>
	<RefSignal IOMode="AlternateFunctionPushPull" Name="CRS"/>
	<RefSignal IOMode="AlternateFunctionPushPull" Name="CRS_DV"/>
	<RefSignal IOMode="AlternateFunctionPushPull" Name="MDC"/>
