                        <SignalLogicalOp Name="AND">
                            <Signal Name="RX"/>
                            <Signal Name="TX"/>
                        </SignalLogicalOp>
                    </Mode>
                </ModeLogicOperator>
                <Semaphore>USB_OR_CAN</Semaphore>
            </Mode>
        </ModeLogicOperator>
		
