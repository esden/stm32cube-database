        </Description>
        <Condition Expression="(Layers = 1)" Diagnostic=""/>
        <PossibleValue Comment="Alpha constant " Value="LTDC_BLENDING_FACTOR2_CA"/>
        <PossibleValue Comment="Alpha constant x Pixel Alpha " Value="LTDC_BLENDING_FACTOR2_PAxCA"/>
