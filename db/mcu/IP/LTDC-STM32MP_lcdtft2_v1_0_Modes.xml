    </RefParameter>
    <RefParameter Comment="Layer 1 - Blue" DefaultValue="0" Max="255" Min="0" Name="Blue_L1" Type="integer" Group="Layer Default Color" TabName="Layer Settings">
        <Condition Expression="(Layers = 1)" Diagnostic=""/>	
