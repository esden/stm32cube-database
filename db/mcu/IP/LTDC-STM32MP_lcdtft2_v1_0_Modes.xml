    <RefParameter Comment="Layer 1 - Alpha" DefaultValue="0" Max="255" Min="0" Name="Alpha0_L1" Type="integer" Group="Layer Default Color" TabName="Layer Settings">
        <Condition Expression="(Layers = 1)" Diagnostic=""/>	
    </RefParameter>
    <RefParameter Comment="Layer 1 - Alpha" Visible="false" DefaultValue="0" Max="255" Min="0" Name="Alpha0_L1" Type="integer" Group="Layer Default Color" TabName="Layer Settings">
    </RefParameter>	
	
    <!-- Layer 1 Windows Position -->
    <RefParameter Comment="Layer 1 - Window Horizontal Start" DefaultValue="0" Max="4095" Min="0" Name="WindowX0_L1" Type="integer" Group="Windows Position" TabName="Layer Settings">
        <Description>Configures the Window Horizontal Start Position Window X0.</Description>
