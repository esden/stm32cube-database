    <!-- *************** START OF LAYER 1 SETTINGS *************** -->
    <!-- Layer Default Color Layer 1 RefParameters for LTDC -->
	
    <RefParameter Comment="Layer 1 - LayerIdx" DefaultValue="1" Visible="false" Max="1" Min="0" Name="LayerIdx_L1" Type="integer" Group="Layer Default Color" TabName="Layer Settings">
