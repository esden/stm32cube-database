    <RefParameter Comment="Layer 0 - Red" DefaultValue="0" Max="255" Min="0" Name="Red_L0" Type="integer" Group="Layer Default Color" TabName="Layer Settings"/>
    <RefParameter Comment="Layer 0 - Green" DefaultValue="0" Max="255" Min="0" Name="Green_L0" Type="integer" Group="Layer Default Color" TabName="Layer Settings"/>
    <RefParameter Comment="Layer 0 - Blue" DefaultValue="0" Max="255" Min="0" Name="Blue_L0" Type="integer" Group="Layer Default Color" TabName="Layer Settings"/>
    <RefParameter Comment="Layer 0 - Alpha" DefaultValue="0" Max="255" Min="0" Name="Alpha0_L0" Type="integer" Group="Layer Default Color" TabName="Layer Settings"/>	
	
