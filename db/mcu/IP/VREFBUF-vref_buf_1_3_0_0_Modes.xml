	<About>VREFBUF: VREFBUF</About>


    <!-- ModeLogicOperator for VREFBUF -->
    <ModeLogicOperator Name="OR">
      <Mode Name="VREFBUF_State" UserName="Activated">
        <ModeLogicOperator Name="XOR">
          <Mode Name="VREFBUF_Activate" UserName="Activated">
            <SignalLogicalOp Name="AND">
              <Signal Name="VS_VREFBUF" />
            </SignalLogicalOp>
          </Mode>
        </ModeLogicOperator>
