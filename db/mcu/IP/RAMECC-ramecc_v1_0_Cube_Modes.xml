    <!-- ModeLogicOperator for RAMECC -->
    <ModeLogicOperator Name="XOR">
        <Mode Name="D1" UserName="D1 domain RAMECC unit" RemoveCondition="DIE480">
            <ModeLogicOperator Name="OR">
                <Mode Name="RAMECC1_Monitor1" UserName="AXI SRAM ECC monitoring unit">
                    <ModeLogicOperator Name="XOR">
                        <Mode Name="RAMECC1_Monitor1" UserName="AXI SRAM ECC monitoring unit">
                            <SignalLogicalOp Name="AND">
                                <Signal Name="VS_D1_1"/>							
                            </SignalLogicalOp>
                        </Mode>							
                    </ModeLogicOperator>					
                </Mode> 							
                <Mode Name="RAMECC1_Monitor2" UserName="ITCM-RAM ECC monitoring unit">
                    <ModeLogicOperator Name="XOR">
                        <Mode Name="RAMECC1_Monitor2" UserName="ITCM-RAM ECC monitoring unit">
                            <SignalLogicalOp Name="AND">
                                <Signal Name="VS_D1_2"/>							
                            </SignalLogicalOp>	
                        </Mode>							
                    </ModeLogicOperator>					
                </Mode>
                <Mode Name="RAMECC1_Monitor3" UserName="D0TCM-RAM ECC monitoring unit">
                    <ModeLogicOperator Name="XOR">
                        <Mode Name="RAMECC1_Monitor3" UserName="D0TCM-RAM ECC monitoring unit">
                            <SignalLogicalOp Name="AND">
                                <Signal Name="VS_D1_3"/>							
                            </SignalLogicalOp>
                        </Mode>							
                    </ModeLogicOperator>					
                </Mode>                        
                <Mode Name="RAMECC1_Monitor4" UserName="D1TCM-RAM ECC monitoring unit">
