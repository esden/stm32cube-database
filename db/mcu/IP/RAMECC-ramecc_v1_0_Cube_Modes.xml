                    <ModeLogicOperator Name="XOR">
                        <Mode Name="RAMECC1_Monitor5" UserName="ETM RAM ECC monitoring unit">
                            <SignalLogicalOp Name="AND">
                                <Signal Name="VS_D1_5"/>							
                            </SignalLogicalOp>	
                        </Mode>							
                    </ModeLogicOperator>					
                </Mode>
                <!-- ***  Only for DIE483  *** -->
                <Mode Name="RAMECC1_Monitor6" UserName="SRAM ECC: AXI SRAM sharable with ITCM-RAM ECC monitoring unit" RemoveCondition="DIE450">
                    <ModeLogicOperator Name="XOR">
                        <Mode Name="RAMECC1_Monitor6" UserName="SRAM ECC: AXI SRAM sharable with ITCM-RAM ECC monitoring unit">
                            <SignalLogicalOp Name="AND">
                                <Signal Name="VS_D1_6"/>							
                            </SignalLogicalOp>	
                        </Mode>							
                    </ModeLogicOperator>					
                </Mode>                                 							
            </ModeLogicOperator>
        </Mode>
       
        <Mode Name="D2" UserName="D2 domain RAMECC unit" RemoveCondition="DIE480">
            <ModeLogicOperator Name="OR">							
                <Mode Name="RAMECC2_Monitor1" UserName="SRAM1_0 ECC monitoring unit">
                    <ModeLogicOperator Name="XOR">
                        <Mode Name="RAMECC2_Monitor1" UserName="SRAM1_0 ECC monitoring unit">
