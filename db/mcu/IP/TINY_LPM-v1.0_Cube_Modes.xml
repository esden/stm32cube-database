<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<IP xmlns:ns0="http://www.w3.org/2001/XMLSchema-instance"
	ns0:schemaLocation="http://mcd.rou.st.com/modules.php?name=mcu ../../../../../../../doc/V4/Development/Specifications/db/IP_Modes.xsd"
 	xmlns="http://mcd.rou.st.com/modules.php?name=mcu"
    DBVersion="V4.0" 
    IPType="service"
    IpGroup="Utilities"
    Name="TINY_LPM"
    Version="v1.0_Cube">
  <About>TINY_LPM: to be completed</About>
	
    <RefMode Name="TINY_LPM_Enabled">
		<ConfigForMode>TINY_LPM_Init</ConfigForMode>
    </RefMode>

    <ModeLogicOperator Name="OR">
      <Mode Name="Enabled" RemoveDisable = "true">
        <ModeLogicOperator Name="NONE">
          <Mode Name="TINY_LPM_Enabled">
            <SignalLogicalOp Name="AND">
              <Signal IOMode="Basic" Name="VS_TINY_LPM"/>
            </SignalLogicalOp>
            <Semaphore>S_TINY_LPM</Semaphore>
          </Mode>
        </ModeLogicOperator>
        <Condition Diagnostic="Active only if Connectivity MW's are enabled" Expression="(S_LoRaWAN | S_SubGhzPhy | S_Sigfox | S_BLE_HOST  | S_BLE_HOST_SKELETON | S_THREAD | S_THREAD_SKELETON | S_ZIGBEE | S_ZIGBEE_SKELETON)"/>
        </Mode>
    </ModeLogicOperator>
    <!-- RefSignal for TINY_LPM -->
    <RefSignal Name="VS_TINY_LPM" Virtual="true"/>
</IP>
