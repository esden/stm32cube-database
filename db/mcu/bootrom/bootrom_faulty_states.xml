                    </InnerLoop>
                </OuterLoop>
            </FaultyState>
            <FaultyState name="NoFSBLMAssignmentsPossible" scope="m33master" >
                <OuterLoop bootDeviceType="all">
                    <Condition diagnostic="" expression="($IpInstance_BOOTLOADER_FSBLM)"/>
