        <File Name="fatfs_bsp_sd_c.ftl;bsp_driver_sd.c" Category="template"/>
    </RefBspComponent> 
   
    
    <RefBspComponent Name="Detect_SDIO_Bis" BspIpName="GPIO" BspModeName="Input">       
