static DSTATUS SD_CheckStatus(BYTE lun)
{
  Stat = STA_NOINIT;
  if(BSP_SD_GetCardState() == BSP_SD_OK)
  {
    Stat &= ~STA_NOINIT;
  }

  return Stat;
}

